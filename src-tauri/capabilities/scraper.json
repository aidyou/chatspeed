{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "scraper",
  "description": "Capability for the scraper window",
  "windows": ["scraper*"],
  "remote": { "urls": ["*://*"] },
  "permissions": ["core:default"],
  "app": {
    "security": {
      "csp": {
        "default-src": "'self' 'unsafe-inline' 'unsafe-eval' data: ipc: http://ipc.localhost asset: http://asset.localhost blob:",
        "img-src": "'self' data: asset: http://asset.localhost blob: canvas-blob:",
        "connect-src": "'self' ipc: ipc://*",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval'",
        "style-src": "'self' 'unsafe-inline'",
        "worker-src": "'self' blob:",
        "canvas-src": "'self' blob: data:"
      }
    }
  }
}
