{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Chatspeed",
  "version": "1.0.1",
  "identifier": "ai.aidyou.chatspeed",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "ChatSpeed",
        "url": "/",
        "width": 600,
        "minWidth": 450,
        "height": 700,
        "titleBarStyle": "Transparent",
        "decorations": false,
        "dragDropEnabled": true,
        "transparent": true,
        "hiddenTitle": true,
        "center": true,
        "create": true
      },
      {
        "label": "note",
        "title": "Notes",
        "url": "/note",
        "width": 1024,
        "minWidth": 600,
        "height": 600,
        "titleBarStyle": "Transparent",
        "decorations": false,
        "dragDropEnabled": true,
        "transparent": true,
        "hiddenTitle": true,
        "center": true,
        "create": false
      },
      {
        "label": "assistant",
        "title": "Assistant",
        "url": "/assistant",
        "width": 400,
        "minWidth": 400,
        "height": 500,
        "minHeight": 400,
        "titleBarStyle": "Transparent",
        "decorations": false,
        "transparent": true,
        "visible": false,
        "skipTaskbar": true,
        "center": true,
        "create": true
      },
      {
        "label": "toolbar",
        "title": "Toolbar",
        "url": "/toolbar",
        "width": 300,
        "height": 50,
        "titleBarStyle": "Overlay",
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "center": true,
        "create": false
      },
      {
        "label": "settings",
        "title": "",
        "url": "/settings",
        "width": 650,
        "maxWidth": 650,
        "minWidth": 650,
        "height": 700,
        "minHeight": 600,
        "maximizable": false,
        "titleBarStyle": "Transparent",
        "decorations": false,
        "transparent": true,
        "center": true,
        "create": false
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "capabilities": []
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["assets"],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "",
    "longDescription": "",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null,
      "providerShortName": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://cdn.jsdelivr.net/gh/aidyou/chatspeed@updater-meta/latest.json",
        "https://github.com/aidyou/chatspeed/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVDODQ4QUFEQzc1QzY2QTIKUldTaVpsekhyWXFFN0tUZHdVM2wxcnB1SzIyU1BZeFY5ZnNXN09LMzR1R2w5VHh2V011ODNXOW4K",
      "windows": {
        "installMode": "passive"
      }
    },
    "shell": {
      "open": true
    }
  }
}
