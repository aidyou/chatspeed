# Python Runtime Configuration
PYTHON_EXECUTABLE=/opt/homebrew/bin/python3.12
PYTHON_HOME=/opt/homebrew/opt/python@3.12
PYTHON_LIBRARY_PATH=/opt/homebrew/opt/python@3.12/Frameworks/Python.framework/Versions/3.12/lib
PYTHON_INCLUDE_PATH=/opt/homebrew/opt/python@3.12/Frameworks/Python.framework/Versions/3.12/include/python3.12

# Virtual Environment Configuration
VENV_PATH=${PWD}/.venv
PIP_INDEX_URL=https://pypi.org/simple
PIP_TIMEOUT=100

# Plugin Configuration
PLUGIN_PYTHON_PACKAGES_FILE=plugin-requirements.txt

# Tauri updater public key
TAURI_UPDATER_PUBKEY=your_public_key_here
