[
  {
    "label": "Start Frontend Dev Server",
    "command": "yarn",
    "args": ["dev"],
    "env": {},
    "cwd": "${ZED_WORKTREE_ROOT}",
    "use_new_terminal": true
  },
  {
    "label": "Build Frontend",
    "command": "yarn",
    "args": ["build"],
    "env": {},
    "cwd": "${ZED_WORKTREE_ROOT}",
    "use_new_terminal": false
  },
  {
    "label": "Tauri Dev (Full Stack)",
    "command": "yarn",
    "args": ["tauri", "dev"],
    "env": {},
    "cwd": "${ZED_WORKTREE_ROOT}",
    "use_new_terminal": true
  },
  {
    "label": "Tauri Build",
    "command": "yarn",
    "args": ["tauri", "build"],
    "env": {},
    "cwd": "${ZED_WORKTREE_ROOT}",
    "use_new_terminal": true
  },
  {
    "label": "Cargo Check (Tauri)",
    "command": "cargo",
    "args": ["check", "--manifest-path", "src-tauri/Cargo.toml"],
    "env": {},
    "cwd": "${ZED_WORKTREE_ROOT}",
    "use_new_terminal": false
  },
  {
    "label": "Cargo Build (Tauri)",
    "command": "cargo",
    "args": ["build", "--manifest-path", "src-tauri/Cargo.toml"],
    "env": {},
    "cwd": "${ZED_WORKTREE_ROOT}",
    "use_new_terminal": false
  },
  {
    "label": "Cargo Build (Dev Mode)",
    "command": "cargo",
    "args": ["build", "--manifest-path", "src-tauri/Cargo.toml", "--no-default-features"],
    "env": {
      "TAURI_DEV": "1"
    },
    "cwd": "${ZED_WORKTREE_ROOT}",
    "use_new_terminal": false
  },
  {
    "label": "Tauri Info",
    "command": "yarn",
    "args": ["tauri", "info"],
    "env": {},
    "cwd": "${ZED_WORKTREE_ROOT}",
    "use_new_terminal": true
  },
  {
    "label": "Clean All",
    "command": "sh",
    "args": [
      "-c",
      "cargo clean --manifest-path src-tauri/Cargo.toml && rm -rf dist node_modules/.vite"
    ],
    "env": {},
    "cwd": "${ZED_WORKTREE_ROOT}",
    "use_new_terminal": true
  }
]
