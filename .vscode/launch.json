{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "üöÄ Tauri Development (Full Stack)",
      "cargo": {
        "args": [
          "build",
          "--manifest-path=./src-tauri/Cargo.toml",
          "--no-default-features"
        ],
        "filter": {
          "name": "chatspeed",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "sourceLanguages": [
        "rust"
      ],
      "env": {
        "RUST_BACKTRACE": "1",
        "RUST_LOG": "trace",
        "TAURI_DEV": "1"
      },
      "preLaunchTask": "start-frontend-dev-server"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "üîß Tauri Backend Only",
      "cargo": {
        "args": [
          "build",
          "--manifest-path=./src-tauri/Cargo.toml",
          "--no-default-features"
        ],
        "filter": {
          "name": "chatspeed",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "sourceLanguages": [
        "rust"
      ],
      "env": {
        "RUST_BACKTRACE": "1",
        "RUST_LOG": "debug",
        "TAURI_DEV": "1"
      },
      "preLaunchTask": "prepare-debug-backend"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "üèóÔ∏è Tauri Production Debug",
      "cargo": {
        "args": [
          "build",
          "--release",
          "--manifest-path=./src-tauri/Cargo.toml"
        ],
        "filter": {
          "name": "chatspeed",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "sourceLanguages": [
        "rust"
      ],
      "env": {
        "RUST_BACKTRACE": "1",
        "RUST_LOG": "info"
      },
      "preLaunchTask": "build-frontend-production"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "üß™ Debug Tests",
      "cargo": {
        "args": [
          "test",
          "--manifest-path=./src-tauri/Cargo.toml",
          "--no-run"
        ],
        "filter": {
          "name": "chatspeed",
          "kind": "test"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "sourceLanguages": [
        "rust"
      ],
      "env": {
        "RUST_BACKTRACE": "full",
        "RUST_LOG": "debug"
      }
    },
    {
      "type": "cppvsdbg",
      "request": "launch",
      "name": "üöÄ Tauri Development (Windows MSVC)",
      "program": "${workspaceFolder}/src-tauri/target/debug/chatspeed.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_BACKTRACE": "1",
        "RUST_LOG": "debug",
        "TAURI_DEV": "1"
      },
      "preLaunchTask": "windows-build-debug",
      "console": "integratedTerminal"
    },
    {
      "type": "cppvsdbg",
      "request": "launch",
      "name": "üîß Tauri Backend (Windows MSVC)",
      "program": "${workspaceFolder}/src-tauri/target/debug/chatspeed.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_BACKTRACE": "1",
        "RUST_LOG": "debug",
        "TAURI_DEV": "1"
      },
      "preLaunchTask": "windows-prepare-debug",
      "console": "integratedTerminal"
    },
    {
      "type": "gdb",
